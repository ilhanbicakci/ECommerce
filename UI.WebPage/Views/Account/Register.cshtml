@model UI.WebPage.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container pt-5" style="margin-top:8rem;">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", enctype="multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
    <div class="card">

        <div class="card-header">
            <h4>Create a new account.</h4>
            <p class="text-muted">Create a local account.</p>
        </div>

        <div class="card-body">

            <div class="container text-center">

                <div class="row">

                    <div class="col">
                        <div class="form-floating mb-3">
                            @Html.EditorFor(x => x.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            @Html.LabelFor(x => x.FirstName)
                        </div>
                    </div>

                    <div class="col">
                        <div class="form-floating mb-3">
                            @Html.EditorFor(x => x.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            @Html.LabelFor(x => x.LastName)
                        </div>
                    </div>

                </div>

                <div class="row">

                    <div class="col">
                        <div class="form-floating mb-3">
                            @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            @Html.LabelFor(x => x.Email)
                        </div>
                    </div>

                </div>

                <div class="row">

                    <div class="col">
                        <div class="form-floating mb-3">
                            @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            @Html.LabelFor(x => x.Password)
                        </div>
                    </div>

                    <div class="col">
                        <div class="form-floating mb-3">
                            @Html.EditorFor(x => x.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = " " } })
                            @Html.LabelFor(x => x.ConfirmPassword)
                        </div>
                    </div>

                </div>

                <div class="row">

                    <div class="col">
                        <div class=" mb-3">
                            @Html.LabelFor(x => x.ProfilePicture, new { @class = "form-label" })
                            @Html.TextBoxFor(x => x.ProfilePicture, new { @class = "form-control", @placeholder = " ", @type = "file" })
                        </div>
                    </div>

                </div>

            </div>

        </div>

        <div class="card-footer">
            <input type="submit" value="Register" class="btn btn-outline-dark" />
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>

    </div>
    }



</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
